


<div class="card">
  <div class="card-header">
  <h1>Login</h1>
  </div>
  <div class="card-body">
  <%= form_tag author_sessions_path, method: :post do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email%>
      <br/>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br/>
    </div>
    <%= submit_tag "Login", class: 'btn btn-primary' %>
  <% end %>
  </div>
</div>
