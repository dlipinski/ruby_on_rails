<h1>Articles Tagged with <%= @tag.name %></h1>

<table class="table table-hover border">
    <tbody>
        <% @tag.articles.each do |article| %>
        <tr >
            <td class="media position-relative">
                <%= link_to article.title, article_path(article) %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= link_to "delete", tag_path(@tag), method: :delete , data: {confirm: "Really delete the tag?"}, class: 'btn btn-outline-danger'%>