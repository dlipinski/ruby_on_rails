<h1>All Articles</h1>

<% if logged_in? %>
    <%= link_to "Create a New Article", new_article_path, class: "new_article btn btn-success mb-3" %>
<% end %>

<table class="table table-hover border">
    <tbody>
        <% @articles.each do |article| %>
        <tr >
            <td class="media position-relative">
                <%= link_to article.title, article_path(article), class: 'article_title stretched-link', id: "article_#{article.id}" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>